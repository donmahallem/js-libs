{
    "include": [
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "typings",
        "src/**/*.spec.ts",
        "**/*.d.ts"
    ],
    "extension": [
        ".ts"
    ],
    "loader": [
        "ts-node/esm"
    ],
    "reporter": [
        "json",
        "html",
        "text-summary",
        "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
}
