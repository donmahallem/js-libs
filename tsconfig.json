{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ES2019"
        ]
    },
    "typeAcquisition": {
        "enable": true
    },
    "exclude": [
        "node_modules"
    ],
    "baseUrl": "./src"
}
