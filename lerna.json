{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "message": "chore(release): publish %s"
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "conventional-changelog-angular",
      "message": "chore(release): publish [skip ci]"
    }
  },
  "ignoreChanges": [
    "ignored-file",
    "**/*.md",
    "**/*.spec.ts",
    "**/tslint.json",
    "**/tsconfig.json",
    "*.md",
    "tslint.json",
    "tsconfig.json",
    "**/rollup.config.js"
  ]
}
